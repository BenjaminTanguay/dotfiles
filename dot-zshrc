source "$HOME/.config/zshrc/nvim"
source "$HOME/.config/zshrc/history"
source "$HOME/.config/zshrc/source-work"
source "$HOME/.config/fzf/key-bindings.zsh"
source "$HOME/.config/fzf/completion.zsh"
