ZSHRC_FOLDER="$HOME/.config/zshrc"

source "${ZSHRC_FOLDER}/nvim"
source "${ZSHRC_FOLDER}/history"
source "${ZSHRC_FOLDER}/source-work"
source "$HOME/.config/fzf/key-bindings.zsh"
source "$HOME/.config/fzf/completion.zsh"
source $HOMEBREW_PREFIX/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source $HOMEBREW_PREFIX/share/zsh-autocomplete/zsh-autocomplete.plugin.zsh

alias reload="source ~/.zshrc"
alias ls='eza --color=always --group-directories-first --icons'
alias ll='eza -la --icons --octal-permissions --group-directories-first'
alias lt='eza --tree --level=2 --color=always --group-directories-first --icons'
alias cat='bat --style=plain'
alias cd='z'
alias k='kubectl'

export GOPATH="$HOME/go"

source "${ZSHRC_FOLDER}/fzf"
source "${ZSHRC_FOLDER}/starship-setup"
source "${ZSHRC_FOLDER}/zoxide-setup"
